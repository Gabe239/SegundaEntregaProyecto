<h1>Products</h1>
<div id="product-list">
    {{#each products}}
    <div class="product-item">
        <h2>{{title}}</h2>
        <p>Description: {{description}}</p>
        <p>Price: ${{price}}</p>
        <p>Thumbnail: {{thumbnail}}</p>
        <p>Code: {{code}}</p>
        <p>Stock: {{stock}}</p>
        <p>Category: {{category}}</p>
        <p>Availability: {{availability}}</p>
        <p>Id: {{_id}}</p>
        <button class="add-to-cart-btn" data-product-id="{{_id}}">Add to Cart</button>
    </div>
    {{/each}}

    <div class="pagination">
        {{#if hasPrevPage}}
        <button id="prev-page-btn" data-current-page="{{currentPage}}">Prev</button>
        {{/if}}
        {{#if hasNextPage}}
        <button id="next-page-btn" data-current-page="{{currentPage}}">Next</button>
        {{/if}}
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/products.js"></script>